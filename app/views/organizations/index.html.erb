<div class="page-header">
  <h1>All Organizations</h1>
</div>
  <%= link_to "Create a New Organization", new_organization_path, class: "btn btn-success" %>
    <div class="row">
      <% @organizations.each do |organization| %>
      <div class="col-xs-6 col-md-3">
          <div class="thumbnail">
            <img src="http://placehold.it/500x300" alt="">
              <div class="caption">
                <h4><%= organization.name %></h4>
                <p><%= organization.description %></p>
                <p> <%= link_to "Website", organization.website , class: "btn btn-default btn-xs" %>
                <%= link_to "Phone", organization.phone_number , class: "btn btn-info btn-xs" %>
                </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
