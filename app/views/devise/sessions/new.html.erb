<%= stylesheet_link_tag "login" %>
<div class = "col-xs-10 col-sm-6 col-md-5 col-sm-offset-2 col-md-offset-3">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <h3 class="form-signin-heading">Welcome Back! Please Sign In</h3>
        <hr class="colorgraph"><br>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.submit 'Log In' , class: "btn btn-primary" %>
        <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %> 
        <div class = "col md-6"></div>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>

<% end %>


</div>
