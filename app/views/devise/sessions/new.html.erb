<%= stylesheet_link_tag "login" %>
<div class="col-xs-10 col-sm-6 col-md-4 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <h3 class="form-signin-heading">Welcome Back! Please Sign In</h3>
        <hr class="colorgraph"><br>
        <%= f.input :email, label: false, placeholder: 'Email address' %>
        <%= f.input :password, label: false, placeholder: 'Password' %>
        <%= f.submit 'Log In' , class: "btn btn-primary" %>
        <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
<% end %>

</div>
