<div class="container">
  <div class="row">


    <!-- edit form column -->

    <div class="well col-md-8 col-sm-6 col-xs-12 personal-info">
      <div class="col-lg-8">
        <%= devise_error_messages! %>

        <legend>Personal info</legend>
       <%= simple_form_for(resource, :as => resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' },
        wrapper: :horizontal_form,
        wrapper_mappings: {
          check_boxes: :horizontal_radio_and_checkboxes,
          radio_buttons: :horizontal_radio_and_checkboxes }) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :bio, placeholder: 'Tell us about yourself!' ,as: :text %>
        <%= f.input :website, placeholder: 'http://www.example.com' %>
        <%= f.input :field, as: :radio_buttons, collection: ["Student","Investor","Employee","Entrepenuer"]%>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <p align="right">You must enter your current password to make changes.</p>
        <%= f.input :current_password %>
        <%= f.button :submit , "Save Changes", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
