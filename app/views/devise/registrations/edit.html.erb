<div class="container">
  <h1>Edit Profile</h1>
  <div class="row">
    <!-- edit form column -->
    <div class="well col-md-5 col-sm-6 col-xs-12">
        <%= devise_error_messages! %>
      <%= simple_form_for(resource, :as => resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' },
         wrapper: :horizontal_form,
         wrapper_mappings: {
           check_boxes: :horizontal_radio_and_checkboxes,
           radio_buttons: :horizontal_radio_and_checkboxes,
           file: :horizontal_file_input,
           boolean: :horizontal_boolean
         }) do |f| %>
        <%= image_tag @user.avatar.url(:medium), :class => "img-circle img-thumbnail" %>
        <%= f.input :avatar, placeholder: 'Upload Picture', as: :file %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :bio, placeholder: 'Tell us about yourself!' ,as: :text %>
        <%= f.input :field, as: :radio_buttons, collection: ["Software Engineer","Data Scientist","Sales","Recruitment","Marketing","DevOps","Product"] %>
        <%= f.input :website, placeholder: 'http://www.example.com'  %>
        <%= f.input :twitter, placeholder: 'http://www.twitter.com/kanye'  %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <div class="row">
        <%= f.button :submit , "Save Changes", class: "btn btn-primary" %>
        <% end %>
        <%= link_to "Cancel my account", registration_path(resource_name),  :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'cd-md-offset-1 btn btn-danger' %>
        </div>
    </div>
  </div>
</div>
