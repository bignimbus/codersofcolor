<div class="container">
<%= devise_error_messages! %>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
    </div>
  <h1 class="page-header">Edit Profile</h1>

    <!-- edit form column -->
    <div class="well col-md-8 col-sm-6 col-xs-12 personal-info">
      <h3>Personal info</h3>
      <div class="col-lg-8">
       <%= simple_form_for(resource, :as => resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' },
        wrapper: :horizontal_form,
        wrapper_mappings: {
          check_boxes: :horizontal_radio_and_checkboxes,
          radio_buttons: :horizontal_radio_and_checkboxes }) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :bio, placeholder: 'Tell us about yourself!' ,as: :text %>
        <%= f.input :field, as: :check_boxes, collection: ["C++","Ruby","Rails","HTML/CSS","Swift","Javascript","PHP","Python"]%>
        <%= f.input :website %>
        <%= f.input :twitter, placeholder: 'do not include the @ symbol' %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <p align="right">You must enter your current password to make changes.</p>
        <%= f.input :current_password %>
        <%= f.button :submit , "Save Changes", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

