<div class="page-header">
  <h1>All Users</h1>
</div>
  <%= link_to "create new user", new_user_path, class: "btn btn-success" %>
    <div class="row">
      <% @users.each do |user| %>
      <div class="col-xs-6 col-md-3">
          <div class="thumbnail">
            <img src="http://placehold.it/500x300" alt="">
              <div class="caption">
                <h4><%= user.full_name %></h4>
                <p><%= user.field %></p>
                <p> <%= link_to "Website", user.website , class: "btn btn-default btn-xs" %>
                <%= link_to "Twitter", user.twitter , class: "btn btn-info btn-xs" %>
                </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
