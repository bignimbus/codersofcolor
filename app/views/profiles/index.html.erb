<div class="page-header">
  <h1>All Profiles</h1>
</div>
  <%= link_to "create new profile", new_profile_path, class: "btn btn-success" %>
    <div class="row">
      <% @profiles.each do |profile| %>
      <div class="col-xs-6 col-md-3">
          <div class="thumbnail">
            <img src="http://placehold.it/500x300" alt="">
              <div class="caption">
                <h4><%= profile.full_name %></h4>
                <p><%= profile.field %></p>
                <p> <%= link_to "Website", profile.website , class: "btn btn-default btn-xs" %>
                <%= link_to "Twitter", profile.twitter , class: "btn btn-info btn-xs" %>
                </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
